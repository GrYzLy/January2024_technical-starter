@using January2024_technical.Models
@model Book

<h2>Create a New Book</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" id="Title" placeholder="Enter book title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Author" class="form-label">Author</label>
        <input asp-for="Author" class="form-control" id="Author" placeholder="Enter author's name" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="PublicationYear" class="form-label">Publication Year</label>
        <input asp-for="PublicationYear" type="number" class="form-control" id="PublicationYear" placeholder="Enter publication year" />
        <span asp-validation-for="PublicationYear" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Genre" class="form-label">Genre</label>
        <input asp-for="Genre" class="form-control" id="Genre" placeholder="Enter book genre" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" id="Price" placeholder="Enter price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Book</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

