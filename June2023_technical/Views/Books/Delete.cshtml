@model BookManagementApp.Models.Book

<h2 class="mb-4">Are you sure you want to delete this book?</h2>

<div class="card shadow-sm p-4">
    <h4 class="mb-3">Book Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Author</dt>
        <dd class="col-sm-9">@Model.Author</dd>

        <dt class="col-sm-3">Publication Year</dt>
        <dd class="col-sm-9">@Model.PublicationYear</dd>

        <dt class="col-sm-3">Genre</dt>
        <dd class="col-sm-9">@Model.Genre</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>
