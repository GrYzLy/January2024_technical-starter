@model BookManagementApp.Models.Book

<h2 class="mb-4">Create a New Book</h2>

<form asp-action="Create" method="post">

    <div class="row mb-3">
        <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Enter the title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Author" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
            <input asp-for="Author" class="form-control" placeholder="Enter the author's name" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="PublicationYear" class="col-sm-2 col-form-label">Publication Year</label>
        <div class="col-sm-10">
            <input asp-for="PublicationYear" class="form-control" placeholder="Enter the publication year" />
            <span asp-validation-for="PublicationYear" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Genre" class="col-sm-2 col-form-label">Genre</label>
        <div class="col-sm-10">
            <input asp-for="Genre" class="form-control" placeholder="Enter the genre" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Enter the price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success btn-lg">Create Book</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
