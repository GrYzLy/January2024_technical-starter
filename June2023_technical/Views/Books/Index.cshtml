@model IEnumerable<BookManagementApp.Models.Book>

<h2 class="mb-4">List of Books</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Publication Year</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.PublicationYear</td>
                    <td>@book.Genre</td>
                    <td>@book.Price</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = book.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", new { id = book.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Create")" class="btn btn-success btn-lg">Create New Book</a>
</div>
